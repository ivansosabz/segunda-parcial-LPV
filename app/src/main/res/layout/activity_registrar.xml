<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registrar">

    <TextView
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintVertical_bias="0.06"/>
    <EditText
            android:layout_width="307dp"
            android:layout_height="78dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/usu"
            android:hint="usuario" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="73dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            android:hint="contrasena" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/usu"
            android:layout_marginTop="88dp"/>
    <EditText
            android:layout_width="295dp"
            android:layout_height="75dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/repetir"
            android:hint="repetir contrasena" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/pass"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.021"/>
    <Button
            android:text="guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guardar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="244dp"
            app:layout_constraintTop_toBottomOf="@+id/repetir" app:layout_constraintVertical_bias="0.491"/>
    <Button
            android:text="cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancelar2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="44dp"
            app:layout_constraintStart_toStartOf="@+id/guardar" android:layout_marginStart="212dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.54"/>
</androidx.constraintlayout.widget.ConstraintLayout>